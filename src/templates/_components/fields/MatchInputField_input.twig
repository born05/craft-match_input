{% import "_includes/forms" as forms %}

{% set config = {
  id: name,
  name: name,
  value: value,
  class: 'nicetext',
  maxlength: field.charLimit,
  showCharsLeft: true,
  placeholder: field.placeholder,
  rows: field.initialRows
} %}

{% if field.multiline %}
  {{ forms.textarea(config) }}
{% else %}
  {{ forms.text(config) }}
{% endif %}

